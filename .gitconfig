[alias]
    ls = log --pretty=format:"%C(red)%h%C(yellow)%d\\ %Creset%s%Cblue\\ %C(green)(%ad)\\ [%Cblue%cn]" --decorate --date=relative
[http]
	sslVerify = true
[core]
	editor = vim
	pager = diff-so-fancy | less --tabs=4 -RFX
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 227
	frag = magenta bold
	commit = 227 bold
	old = red bold
	new = green bold
	whitespace = red reverse
[includeIf "gitdir:~/github/"]
    path = ~/github/.gitconfig
[credential]
	helper = osxkeychain
